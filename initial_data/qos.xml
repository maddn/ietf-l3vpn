<config xmlns="http://tail-f.com/ns/config/1.0">
  <global-qos xmlns="http://com/example/l3vpn-ntw">
    <qos-policy>
      <name>Bronze</name>
      <class>
        <qos-class>Business-Critical</qos-class>
        <bandwidth-percentage>20</bandwidth-percentage>
      </class>
      <class>
        <qos-class>Mission-Critical</qos-class>
        <bandwidth-percentage>10</bandwidth-percentage>
      </class>
      <class>
        <qos-class>Realtime</qos-class>
        <bandwidth-percentage>10</bandwidth-percentage>
      </class>
    </qos-policy>
    <qos-policy>
      <name>Gold</name>
      <class>
        <qos-class>Business-Critical</qos-class>
        <bandwidth-percentage>20</bandwidth-percentage>
      </class>
      <class>
        <qos-class>Mission-Critical</qos-class>
        <bandwidth-percentage>25</bandwidth-percentage>
      </class>
      <class>
        <qos-class>Realtime</qos-class>
        <bandwidth-percentage>20</bandwidth-percentage>
        <priority/>
      </class>
    </qos-policy>
    <qos-policy>
      <name>Silver</name>
      <class>
        <qos-class>Business-Critical</qos-class>
        <bandwidth-percentage>20</bandwidth-percentage>
      </class>
      <class>
        <qos-class>Mission-Critical</qos-class>
        <bandwidth-percentage>25</bandwidth-percentage>
      </class>
      <class>
        <qos-class>Realtime</qos-class>
        <bandwidth-percentage>10</bandwidth-percentage>
      </class>
    </qos-policy>
    <qos-class>
      <name>Business-Critical</name>
      <dscp-value>18</dscp-value>
      <match-rule>
        <name>ssh</name>
        <protocol>tcp</protocol>
        <source-ip-address>any</source-ip-address>
        <destination-ip-address>any</destination-ip-address>
        <port-start>22</port-start>
        <port-end>22</port-end>
      </match-rule>
    </qos-class>
    <qos-class>
      <name>Mission-Critical</name>
      <dscp-value>26</dscp-value>
      <match-rule>
        <name>call-signaling</name>
        <protocol>tcp</protocol>
        <source-ip-address>any</source-ip-address>
        <destination-ip-address>any</destination-ip-address>
        <port-start>5060</port-start>
        <port-end>5061</port-end>
      </match-rule>
    </qos-class>
    <qos-class>
      <name>Realtime</name>
      <dscp-value>46</dscp-value>
      <match-rule>
        <name>voice</name>
        <protocol>udp</protocol>
        <source-ip-address>any</source-ip-address>
        <destination-ip-address>any</destination-ip-address>
        <port-start>16348</port-start>
        <port-end>32767</port-end>
      </match-rule>
    </qos-class>
  </global-qos>
</config>
